---
import Divider from "./Divider.astro";
export interface Props {
  longdescription?: string;
  description?: string;
  time?: string;
  portions?: string;
}

const { description, longdescription, time, portions } = Astro.props;

// funksjon i stedenfor med set:html={rawHTMLString}
---

<div class="fs-description">
  <div class="fs-description__emojis">
    <span>üëØ {portions} posjoner</span>
    <span>‚è≥ {time}</span>
  </div>
  <Divider grey />
  <p class="fs-description__ingress" set:html={description} />

