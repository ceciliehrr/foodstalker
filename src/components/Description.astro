  <div class="fs-description__meta">
    {recipe && <DifficultyBadge recipe={recipe} client:idle />}
    <Badge type="info" icon="ðŸ½ï¸" text={`${portions} posjoner`} client:idle />
    <Badge type="info" icon="â±ï¸" text={formatTime(time)} client:idle />
  </div>
  <Divider grey />

  {description && <p class="fs-description__ingress" set:html={description} />}

  <div class="fs-description__text">
    {paragraphs.map((para) => <p set:html={para.trim()} />)}
  </div>
</div>

