---
export interface Props {
  text: string;
}

const { text } = Astro.props as Props;
---

<div class="relative flex py-5 items-center">
  <div class="flex-grow border-t border-black"></div>
  <span class="flex-shrink mx-4 text-black">{text}</span>
  <div class="flex-grow border-t border-black"></div>
</div>
