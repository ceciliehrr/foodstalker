---
export interface Props {
  title: string;
  emoji: string;
  href: string;
  image: string;
  description: string;
  date: string;
}
const { href, title, emoji, image, description, date } = Astro.props;
var months = [
  "Januar",
  "Februar",
  "Mars",
  "April",
  "Mai",
  "Juni",
  "Juli",
  "August",
  "September",
  "Oktober",
  "November",
  "Desember",
];
function convertDate(date_str) {
  const temp_date = date_str.split("-");
  return (
    temp_date[2] + ". " + months[Number(temp_date[1]) - 1] + " " + temp_date[0]
  );
}
const convertedDate = convertDate(date);
function emoji_category(cat) {
  switch (cat) {
    case "hverdag":
      return "🍜";
    case "helg":
      return "🌮";
    case "søtt":
      return "🍩";
    case "tilbehør":
      return "🌽";
    case "turmat":
      return "🔥";
    default:
      return "🍜";
  }
}
---

<a
  href={href}
  class="flex flex-col bg-white rounded-lg border-r border-b border-l border-gray-400 lg:border-l-0 lg:border-t lg:border-gray-400 lg:flex-row lg:max-w-xl hover:bg-gray-100 dark:border-gray-700 dark:bg-gray-800 dark:hover:bg-gray-700"
>
  <div class="shrink-0">
    <img
      class="object-cover w-full h-96 rounded-t-lg lg:h-full lg:w-48 lg:rounded-none lg:rounded-l-lg"
      src={image}
      alt=""
    />
  </div>
  <div class="flex flex-1 flex-col justify-between p-4 leading-normal">
    <div class="relative w-full h-2 md:h-10 visible md:invisible">
      <div
        class="grid place-items-center absolute bg-green-100 right-2 -top-10 md:-top-2 md:right-35 w-10 h-10 rounded-full shadow-lg"
      >
        <span>{emoji_category(emoji)}</span>
      </div>
    </div>
    <div class="flex flex-1 flex-col">
      <h5 class="mb-2 text-xl font-bold tracking-tight dark:text-white">
        {title}
      </h5>
      <p class="mb-3 font-normal dark:text-gray-400">
        {description}
      </p>
      <div class="mt-3 visible md:invisible">{date}</div>
    </div>
    <div
      class="flex content-end relative w-full h-2 md:h-10 invisible md:visible"
    >
      <div class="text-gray-500 self-end">{convertedDate}</div>
      <div
        class="grid place-items-center absolute bg-green-100 md:bottom-0 md:right-0 w-10 h-10 rounded-full shadow-lg"
      >
        <span>{emoji_category(emoji)}</span>
      </div>
    </div>
  </div>
</a>
