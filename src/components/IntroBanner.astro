---
import { Image } from "astro:assets";
import sitron from "../assets/sitron2.jpg";
---

<div class="fs-banner fade-in">
  <div class="fs-banner__text">
    <h1 class="bannerTitle">F O O D S T A L K E R</h1>
    <p>Vi stalker flinke kokker og deler v√•re favorittoppskrifter</p>
  </div>
  <div class="fs-banner__image">
    <Image src={sitron} aria-hidden="true" alt="forsidebilde" />
  </div>
</div>
<style lang="scss" scoped>
  @use "sass:map";
  @use "../styles/variables/" as *;
  @use "../styles/mixins/breakpoints" as *;
  @use "../styles/mixins/" as *;

  .fs-banner {
    display: flex;
    flex-direction: column;
    place-content: center;

    @include bp("tablet-up") {
      flex-direction: row;
      margin: 2rem;
    }
    &__text {
      display: grid;
      place-content: center;
      text-align: center;
      @include bp("tablet-up") {
        flex-basis: 50%;
      }
      & h1 {
        @include get-text("fs-h5");
        @include bp("tablet-up") {
          @include get-text("fs-h4");
        }
      }
      & p {
        max-width: 20rem;
      }
    }
    &__image {
      margin-top: 2rem;
      flex-basis: 50%;
    }
  }
</style>
