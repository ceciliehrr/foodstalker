---
import Navbar from "../components/Navbar.vue";
import Footer from "../components/Footer.vue";
import "../styles/main.scss";
export interface Props {
  title: string;
  siteName?: string;
  description?: string;
  image?: string;
  hideFoodstalkerLayout?: boolean;
}

const {
  title = "Foodstalker",
  siteName = "Foodstalker",
  description = "Foodstalker en matblogg laget av to matstalkere som blir inspirert av flinke kokker og deler sine favorittoppskrifter",
  image = "https://foodstalker.b-cdn.net/2021/juleflesk/DSC00495-2.jpg",
  hideFoodstalkerLayout = false,
} = Astro.props as Props;
---

<!doctype html>
<html lang="no" class="html">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, minimum-scale=1"
    />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:site_name" content={siteName} />
    <meta property="og:description" content={description} />
    <meta name="description" content={description} />
    <meta property="og:image" content={image} />
    <meta
      property="og:url"
      content={new URL(Astro.url.pathname, Astro.site).href}
    />
    <link rel="icon" href="/logo-pink35x35.png" />
    <script
      defer
      data-domain="foodstalker.no"
      src="https://plausible.io/js/script.js"></script>

    <title>Foodstalker - {title}</title>
  </head>

  <body class={hideFoodstalkerLayout ? "" : "fs-body"}>
    {!hideFoodstalkerLayout && <Navbar client:load />}
    <main
      class={hideFoodstalkerLayout
        ? ""
        : "fs-container fs-container--tablet-big"}
    >
      <slot />
    </main>
    {!hideFoodstalkerLayout && <Footer client:load />}
  </body>
</html>
